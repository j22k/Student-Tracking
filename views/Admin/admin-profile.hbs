<style>
  .disabled {
			pointer-events: none;
			opacity: 0.5;
		}
</style>
<script>
  function enableusernameDiv(){
    
  document.getElementById('changeusernaeme').disabled = false;
  
  document.getElementById('usernamebutton').disabled = false;
  
  }
</script>
<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="#">Profile</a></li>
          </ol>
        </nav>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3">{{user.username}}</h5>
             {{!-- <p class="text-muted mb-1">Full Stack Developer</p> --}}
            <p class="text-muted mb-4">{{user._id}}</p>
            <div class="d-flex justify-content-center mb-2"> 
              {{!-- <button type="button" class="btn btn-primary">Follow</button>
              <button type="button" class="btn btn-outline-primary ms-1">Message</button> --}}
            </div>
          </div>
        </div>
      
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.fullname}}</p>
                 {{#if user.fullname}}
                 {{else}}
                  <a href="" class="btn btn-outline-primary ms-1" >add fullname</a>
                 {{/if}}
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.email}}</p>
                  {{#if user.email}}
                  {{else}}
                  <a href="" class="btn btn-outline-primary ms-1" >add email</a>
                  {{/if}}
              </div>
            </div>
            <hr>
           <div class="row">
              <div class="col-sm-3">
              </div>
              <div class="col-sm-9">
                <button onclick="enableusernameDiv()" class="btn btn-outline-primary ms-1"> change username</button>
         
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
              </div>
              <div class="col-sm-9">
                  <a href="" class="btn btn-outline-primary ms-1" >change password</a>
                
              </div>
            </div>
            <hr>
            
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div class="card-body" id="usernameDiv">
                <form action=""> 
                  <input type="text" name="username" id="changeusernaeme" class="form-control form-control-lg" placeholder="New Username" disabled/>
                  </form>
                   
              </div>
              <button  class="btn btn-primary btn-lg btn-block" id="usernamebutton"  disabled>Change</button>
              
            </div>
          </div>
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div class="card-body">
                <form action=""> 
                  <input type="text" name="password" id="changeusernaeme" class="form-control form-control-lg" placeholder="New Username" disabled/><br>
                   <input type="text" name="confirmpassword" id="changeusernaeme" class="form-control form-control-lg" placeholder="New Username" disabled/>
        
                  </form>
                   
              </div>
              <button  class="btn btn-primary btn-lg btn-block" id="usernamebutton"  disabled>Change</button>
              
               </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>